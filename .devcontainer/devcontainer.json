{
 "name": "Python 3.12 with uv and jupyter support",
 "image": "mcr.microsoft.com/devcontainers/python:1-3.12-bookworm",
    "hostRequirements": {
        "cpus": 4
    },
 "features": {
  "ghcr.io/va-h/devcontainers-features/uv:1": {}
 },
    "customizations": {
     "vscode": {
      "extensions": [
        "ms-toolsai.jupyter",
        "ms-python.python",
        "ms-toolsai.datawrangler",
        "esbenp.prettier-vscode",
        "GitHub.copilot",
       "mechatroner.rainbow-csv"
      ],
      "settings": {
          "python.defaultInterpreterPath": "${containerWorkspaceFolder}/.venv/bin/python",
          "python.terminal.activateEnvInCurrentTerminal": true
      }
     }
    },
    "postCreateCommand": "uv venv --clear && uv pip install -r requirements.txt",
    "postStartCommand": "bash -lc 'if [ -f \"${containerWorkspaceFolder}/.venv/bin/activate\" ]; then source \"${containerWorkspaceFolder}/.venv/bin/activate\"; fi'"
}
