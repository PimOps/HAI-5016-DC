{
 "name": "Python 3.12 with uv and jupyter support",
 "image": "mcr.microsoft.com/devcontainers/python:1-3.12-bookworm",
 "features": {
  "ghcr.io/va-h/devcontainers-features/uv:1": {}
 },
    "customizations": {
     "vscode": {
      "extensions": [
        "ms-toolsai.jupyter",
        "ms-python.python",
        "ms-toolsai.datawrangler",
        "esbenp.prettier-vscode",
        "GitHub.copilot"
      ]
     }
    },
    "postCreateCommand": "uv venv --clear && uv pip install -r requirements.txt"
}